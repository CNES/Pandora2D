{
    "input": {
      "left": {
        "img": "../images/maricopa/left.tif",
        "nodata": -9999
      },
      "right": {
        "img": "../images/maricopa/right.tif",
        "nodata": -9999
      },
      "col_disparity": {"init": "../images/maricopa/init_col_disparity_grid.tif", "range": 5},
      "row_disparity": {"init": "../images/maricopa/init_row_disparity_grid.tif", "range": 5}
    },
    "pipeline": {
      "matching_cost": {
        "matching_cost_method": "zncc",
        "window_size": 5
      },
      "disparity": {
        "disparity_method": "wta",
        "invalid_disparity": "NaN"
      },
      "refinement": {
        "refinement_method": "dichotomy",
        "iterations": 2,
        "filter": {"method": "bicubic"}
    }
  },
  "output": {
    "path": "a_variable_disparity_pipeline_output"
  }
}
